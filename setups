resource "null_resource" "setup" {
  depends_on = [aws_instance.this]
  connection {
    type        = "ssh"
    host        = aws_instance.this.public_ip
    user        = "ubuntu"
    private_key = tls_private_key.pem.private_key_pem
    timeout     = "5m"
  }

  provisioner "file" {
    content   = var.db == "sql" && var.redis == true && var.rabitmq == true ? local.sql-redis-rabit : var.db == "mongo" &&  var.redis == true && var.rabitmq == true ? local.mongo-redis-rabitmq : "new.txt"
    destination = "/tmp/psql.sh"
  }
  provisioner "remote-exec" {
    
    inline = [
      "chmod +x /tmp/psql.sh",
      "bash /tmp/psql.sh",
      "rm -f /tmp/psql.sh",
    ]
  }
  triggers = {
    content = sensitive(local.rds_extn_script)
  }
}

resource "local_file" "foo" {
  content  = tls_private_key.pem.private_key_pem
  filename = "${aws_key_pair.pem.key_name}.pem"
}